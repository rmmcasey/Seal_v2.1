{
  "manifest_version": 3,
  "name": "Seal - Encrypted File Sharing for Gmail",
  "version": "1.0.0",
  "description": "Encrypt files with time-based expiration directly from Gmail. Send sealed files that only intended recipients can open.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://mail.google.com/*",
    "https://seal.email/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://mail.google.com/*"],
      "js": ["content-script.js"],
      "css": ["content-style.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "receiver/receiver.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/seal-logo.svg", "popup/popup.html"],
      "matches": ["https://mail.google.com/*"]
    }
  ]
}
